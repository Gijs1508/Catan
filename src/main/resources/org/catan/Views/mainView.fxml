<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="676.0" prefWidth="1200.0" style="-fx-background-color: #224870;" stylesheets="@../assets/style/style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.catan.Controller.MainController">
   <children>
      <ImageView fx:id="bg" fitHeight="676.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/menu/noshadow.png" />
         </image>
      </ImageView>
      <ImageView fx:id="bgShadow" fitHeight="751.0" fitWidth="1201.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/menu/shadow.png" />
         </image>
      </ImageView>
      <ImageView fx:id="musicBtn" fitHeight="74.0" fitWidth="79.0" layoutX="1125.0" onMouseClicked="#toggleMusic" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/musicOnWhite.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <TextField id="namefield" fx:id="player_name_input" layoutX="501.0" layoutY="333.0" prefHeight="45.0" prefWidth="199.0" promptText="Your name..">
         <font>
            <Font size="21.0" />
         </font>
      </TextField>
      <ImageView id="logo_img" fx:id="title" fitHeight="318.0" fitWidth="550.0" layoutX="326.0" layoutY="65.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/Catan-logo.png" />
         </image>
      </ImageView>
      <VBox fx:id="buttons" layoutX="466.0" layoutY="391.0" prefHeight="203.0" prefWidth="266.0" spacing="6.0">
         <children>
            <ImageView fitHeight="71.0" fitWidth="266.0" onMouseClicked="#startGame" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/img/menu/startGame.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <ImageView fitHeight="71.0" fitWidth="266.0" onMouseClicked="#joinGame" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/img/menu/joinGame.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <ImageView fitHeight="71.0" fitWidth="266.0" onMouseClicked="#viewRules" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/img/menu/Rules.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </VBox>
      <Pane fx:id="alertPopup" layoutX="441.0" layoutY="252.0" prefHeight="182.0" prefWidth="317.0" />
   </children>
</AnchorPane>
