<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="676.0" prefWidth="1200.0" stylesheets="@../assets/style/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.catan.Controller.JoinController">
   <children>
      <ImageView fitHeight="676.0" fitWidth="1233.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/Bord_met_water.png" />
         </image>
      </ImageView>
      <TextField fx:id="code_input" alignment="CENTER" layoutX="507.0" layoutY="338.0" prefHeight="62.0" prefWidth="186.0" promptText="Code..." style="-fx-background-radius: 8px; -fx-border-radius: 8px; -fx-background-color: #FCFCFC; -fx-border-color: #D3D3D3; -fx-border-width: 2px;">
         <font>
            <Font size="28.0" />
         </font>
      </TextField>
      <ImageView id="logo_img" fitHeight="318.0" fitWidth="550.0" layoutX="325.0" layoutY="65.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/Catan-logo.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="72.0" fitWidth="298.0" layoutX="454.0" layoutY="436.0" onMouseClicked="#handleButtonJoinAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/menu/joinGame.png" />
         </image>
      </ImageView>

      <Label fx:id="error_text" layoutX="418.0" layoutY="398.0" prefHeight="31.0" prefWidth="370.0" style="-fx-alignment: center;" text="Code is invalid" textAlignment="CENTER" textFill="#e4e4e4" visible="false">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <ImageView fitHeight="55.0" fitWidth="298.0" layoutX="552.0" layoutY="514.0" onMouseClicked="#backToMenu" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/menu/back2.png" />
         </image>
      </ImageView>
      <ImageView fx:id="musicBtn" fitHeight="74.0" fitWidth="79.0" layoutX="1128.0" onMouseClicked="#toggleMusic" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/img/musicOnWhite.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
